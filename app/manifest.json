{
  "manifest_version": 3,
  "name": "first-app2",
  "version": "1",
  "icons": {
    "128": "./src/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "minimum_chrome_version": "28",
  "permissions": [ 
    "webview", 
    "storage", 
    "contextMenus", 
    "alwaysOnTopWindows", 
    "unlimitedStorage", 
    "browser"
  ],
  "url_handlers": {
    "openApp": {
      "matches": [
        "http://localhost:3000/desktop/*"
      ],
      "title": "Open App"
    }
  }
}
